# ls
alias ls='ls --color=auto'
alias ll='ls -l'
alias lla='ls -la'

# grep
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# If vim exists
type vim &> /dev/null
if [ $? -eq 0 ]; then
	# Vim as default
	alias vi=vim
	alias edit='vim'
else
	# Vi as default
	alias edit='vi'
fi
